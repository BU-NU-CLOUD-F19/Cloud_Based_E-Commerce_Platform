    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "nodemon": "^1.19.2",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">= 8.3.0"
